    <form class="form-inline" action="/usersearch" method="post">
        <div class="form-group">
            
            <input type="hidden" class="form-control" id="email"  name="email" value="<%= title%>">
          </div>
        <div class="form-group">
          <label for="From">From:</label>
          <input type="date" class="form-control" id="From"  name="From">
        </div>
        <div class="form-group">
          <label for="To">To:</label>
          <input type="date" class="form-control" id="To"  name="To">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
        
      </form>
      <br>


                    <table class="table table-bordered">
                        <thead>
                          <tr >
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Title</th>
                            <th>Description</th>
                            <!-- <th>task Progress</th> -->
                            <th>Number of Leave</th>
                            <th>Status</th>
                            <th>Leave Type</th>
                            <th>Half Day</th>
                            
                          </tr>
                        </thead>
                        <% record.forEach(function(row) {%>
                            <% if  (row.status=="Cancelled") { %>
                                <tr style="color:red">
                                    <td><%= row.sDate %></td>
                                    <td><%= row.eDate %></td>
                                    <td><%= row.title %></td>
                                    <td><%= row.description %></td>    
                                    <td><%= row.noLeave %></td>
                                    <td><%= row.status %></td>
                                    <td><%= row.lType %></td>
                                    <td><%= row.halfDay %></td>
                                    <!-- <td>
                                    <a href="/edit/<%= row._id%>"><i class="fa fa-edit" style="font: size 20px; color: black; margin-left: 10px;"></i></a>
                                    <a onclick="fun('/delete/<%= row._id%>')"><i class="fa fa-trash" style="font-size:20px; color: black; margin-left: 10px;"></i></a>
                                    </td> -->
                                </tr>
                                <% } else if(row.status=="Approved"){ %>
                                    <tr style="color:green">
                                        <td><%= row.sDate %></td>
                                        <td><%= row.eDate %></td>
                                        <td><%= row.title %></td>
                                        <td><%= row.description %></td>    
                                        <td><%= row.noLeave %></td>
                                        <td><%= row.status %></td>
                                        <td><%= row.lType %></td>
                                        <td><%= row.halfDay %></td>
                                        <!-- <td>
                                        <a href="/edit/<%= row._id%>"><i class="fa fa-edit" style="font: size 20px; color: black; margin-left: 10px;"></i></a>
                                        <a onclick="fun('/delete/<%= row._id%>')"><i class="fa fa-trash" style="font-size:20px; color: black; margin-left: 10px;"></i></a>
                                        </td> -->
                                    </tr>
                                    <% }else{ %>
                                        <tr style="color:DodgerBlue">
                                            <td><%= row.sDate %></td>
                                        <td><%= row.eDate %></td>
                                        <td><%= row.title %></td>
                                        <td><%= row.description %></td>    
                                        <td><%= row.noLeave %></td>
                                        <td><%= row.status %></td>
                                        <td><%= row.lType %></td>
                                        <td><%= row.halfDay %></td>
                                        <% } %>
                        <%})%>    
                      </table>
 
  </body>
</html>