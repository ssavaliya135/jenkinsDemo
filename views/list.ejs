  <body>
    <div class="container">
    <form action="/add" method="POST" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label for="date" class="col-md-3 control-label">Email</label>
            <div class="col-md-9">
                <!-- <input type="text" class="form-control" name="Date" placeholder="Enter Date"> -->
                <input type="email" class="form-control" name="email" placeholder="email" value="<%= title%>" readonly="readonly">
            </div>
        </div>
        <div class="form-group">
            <label for="sDate" class="col-md-3 control-label">Start Date</label>
            <div class="col-md-9">
                <!-- <input type="text" class="form-control" name="Date" placeholder="Enter Date"> -->
                <input type="date" class="form-control" name="sDate" placeholder="YYYY-MM-DD">
            </div>
        </div>
        <div class="form-group">
            <label for="eDate" class="col-md-3 control-label">End Date</label>
            <div class="col-md-9">
                <!-- <input type="text" class="form-control" name="Date" placeholder="Enter Date"> -->
                <input type="date" class="form-control" name="eDate" placeholder="YYYY-MM-DD">
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-md-3 control-label">Title</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="title" placeholder="Enter Title">
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-md-3 control-label">Description</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="description" placeholder="Description">
            </div>
        </div>
        <div class="form-group">
            <label for="lType" class="col-md-3 control-label">Leave Type</label>
            <div class="col-md-9">
                <input type="text" class="form-control" list="status" name="lType" placeholder="Paid/unpaid">
                <datalist name="status" id="status">
                    <option>Paid</option>
                    <option>Unpaid</option>
                  </datalist>
            </div>
        </div>
        <div class="form-group">
            <label for="halfDay" class="col-md-3 control-label">Half Day</label>
            <div class="col-md-9">
                <input type="text" class="form-control" list="halfDay" name="halfDay" placeholder="yes/no">
                <datalist name="halfDay" id="halfDay">
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                  </datalist>
            </div>
        </div>
        <div class="form-group">
            <!-- Button -->
            <div class="col-md-offset-3 col-md-9">
                <input type="submit"class="btn btn-primary">
            </div>
        </div>
        
    </form>
</div> 
<a href="login.html">logout</a>
